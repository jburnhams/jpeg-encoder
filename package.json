{
  "name": "jpeg-encoder-wasm",
  "version": "0.1.0",
  "description": "WebAssembly JPEG encoder",
  "main": "./pkg/cjs/index.cjs",
  "module": "./pkg/esm/index.js",
  "types": "./pkg/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./pkg/index.d.ts",
        "default": "./pkg/esm/index.js"
      },
      "require": {
        "types": "./pkg/index.d.ts",
        "default": "./pkg/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "pkg"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:bindings",
    "build:wasm": "cargo build --manifest-path wasm-bindings/Cargo.toml --release --target wasm32-unknown-unknown",
    "build:bindings": "node scripts/build-bindings.js",
    "prepare:docs": "mkdir -p docs/dist && cp -r pkg/esm/* docs/dist/",
    "test": "npm run test:esm && npm run test:cjs",
    "test:esm": "node test/integration.test.js",
    "test:cjs": "node test/integration-cjs.test.cjs",
    "test:browser": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js",
    "test:all": "npm test && npm run test:browser",
    "example": "node examples/encode.js"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:44600/git/jburnhams/jpeg-encoder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "canvas": "^3.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
